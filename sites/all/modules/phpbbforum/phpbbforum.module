function _phpbbforum_replace_links($output) {
  global $phpbb_config, $site_forum_url, $site_phpbb_page;

  $phpbburl = $phpbb_config['forum_url'];
  //$parsed_url = parse_url($phpbburl);
  //$url = $parsed_url['scheme'] .'://'. $parsed_url['host'];
  //$site_forum_url = $url .'/'. $site_phpbb_page;
  //_phpbbforum_set_message('$site_forum_url '.$site_forum_url.' == '.$url.'=='.$phpbburl);  
  
  $frameurl = $site_forum_url;
  $output = str_replace($phpbburl, $frameurl, $output);
  // replace back phpbb images
  $frameurl = '<img src="'. $frameurl;
  $phpbburl = '<img src="'. $phpbburl;
  $output = str_replace($frameurl, $phpbburl, $output);
  // replace relative phpbb images paths
  $relurl = '<img src="images';
  $phpbburl = '<img src="'. $phpbburl .'/images';
  $output = str_replace($relurl, $phpbburl, $output);

  return $output;
}

