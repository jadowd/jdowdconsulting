  $sync_to_admin = false;
  if ($sync == PHPBB_SYNC_TO_PHPBB) {
    if ($phpbb_user->data['user_id'] == 2)
      $sync_to_admin = true;
  }
  elseif ($account->uid == 1)
    $sync_to_admin = true;

  $data = array();

  if (!$sync_to_admin) {
    // not for admin
