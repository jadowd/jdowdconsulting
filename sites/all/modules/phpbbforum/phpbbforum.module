  //_phpbbforum_set_message('validate user=' . $edit['name'] .' uid=' . $user->uid .' pass='. $edit['pass'] .' mail='. $edit['mail']);
  
  // Validate the username:
  if (user_access('change own username') || user_access('administer users') || !$user->uid) {
