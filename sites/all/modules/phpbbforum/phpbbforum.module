      $valphpbb = phpbb_api_utf8($phpbb_user->data['username']);
      if ($sync_data && $val != $valphpbb) {
        if ($sync == PHPBB_SYNC_TO_PHPBB)
          $data += array('username' => phpbb_api_charset($val));
